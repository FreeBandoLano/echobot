# Radio Synopsis Configuration
# Copy this file to .env and configure your settings

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Radio Stream Configuration
RADIO_STREAM_URL=https://ice66.securenetsystems.net/VOB929?playSessionID=DYNAMIC
AUDIO_INPUT_DEVICE=default

# Timezone Configuration
TZ=America/Barbados

# Directory Configuration (optional - defaults provided)
AUDIO_DIR=./audio
TRANSCRIPTS_DIR=./transcripts
SUMMARIES_DIR=./summaries
WEB_DIR=./web_output

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001

# Block Schedule Configuration (times in local timezone)
BLOCK_A_START=10:00
BLOCK_A_END=12:00
BLOCK_B_START=12:05
BLOCK_B_END=12:30
BLOCK_C_START=12:40
BLOCK_C_END=13:30
BLOCK_D_START=13:35
BLOCK_D_END=14:00

MAX_SUMMARY_LENGTH=1000
ENABLE_DETAILED_QUOTES=true
ENABLE_EMBED_CLUSTERING=true
EMBEDDING_MODEL=text-embedding-3-small
CLUSTER_SIM_THRESHOLD=0.78
CLUSTER_MIN_SENT_LEN=30
CLUSTER_MAX_CLUSTERS=8

# Daily Digest Configuration
ENABLE_DAILY_DIGEST=true
DAILY_DIGEST_TARGET_WORDS=4000

# Digest Creation Coordination (Prevents duplicate emails)
# Options: task_manager (recommended), scheduler, or both
# task_manager: Creates digest when all blocks complete (faster, more reliable)
# scheduler: Creates digest at fixed time (7:30 PM)
# both: Both can create digests (not recommended - relies on locks)
DIGEST_CREATOR=task_manager

# Email Configuration (for automatic delivery)
ENABLE_EMAIL=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=barbados.radio.synopsis@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM=barbados.radio.synopsis@gmail.com
EMAIL_TO=delano@futurebarbados.bb,anya@futurebarbados.bb

# Email Notes:
# - Use app-specific passwords for Gmail (not your regular password)
# - Separate multiple recipients with commas
# - Set ENABLE_EMAIL=false to disable email delivery during testing
# - Current recipients: Testing team (delano@futurebarbados.bb, anya@futurebarbados.bb)
