# ========================================
# AZURE DEPLOYMENT CONFIGURATION
# ========================================
# Copy this to .env for local development
# Use Azure Key Vault for production secrets

# OpenAI Configuration (Azure-compatible)
OPENAI_API_KEY=your_openai_api_key_here
# For Azure OpenAI (when ready):
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your_azure_openai_key
# AZURE_OPENAI_DEPLOYMENT_NAME=your_whisper_deployment

# ========================================
# RADIO STREAM CONFIGURATION (CLOUD-READY)
# ========================================
# VOB 92.9 FM Direct Stream (SecureNet Systems)
RADIO_STREAM_URL=https://ice66.securenetsystems.net/VOB929

# NOTE: AUDIO_INPUT_DEVICE is commented out for cloud deployment
# Local testing only - not available in Azure:
# AUDIO_INPUT_DEVICE=Stereo Mix (Realtek(R) Audio)

# ========================================
# AZURE ENVIRONMENT SETTINGS
# ========================================

# Timezone
TZ=America/Barbados

# File Storage (Azure Blob Storage paths for production)
AUDIO_DIR=./audio
TRANSCRIPTS_DIR=./transcripts
SUMMARIES_DIR=./summaries  
WEB_DIR=./web_output

# For Azure production:
# AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string
# AUDIO_CONTAINER=audio-recordings
# TRANSCRIPTS_CONTAINER=transcripts
# SUMMARIES_CONTAINER=summaries

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ========================================
# PRODUCTION SCHEDULE (Barbados AST)
# ========================================
# Down to Brass Tacks: 10:00 AM - 2:00 PM

# Block A: Main program start (10:00-12:00) - 120 minutes
BLOCK_A_START=10:00
BLOCK_A_END=12:00

# Block B: News summary break (12:05-12:30) - 25 minutes  
BLOCK_B_START=12:05
BLOCK_B_END=12:30

# Block C: Major newscast (12:40-13:30) - 50 minutes
BLOCK_C_START=12:40
BLOCK_C_END=13:30

# Block D: Today in Bajan History (13:35-14:00) - 25 minutes
BLOCK_D_START=13:35
BLOCK_D_END=14:00

# ========================================
# TESTING SCHEDULE (for development)
# ========================================
# Uncomment for rapid testing:
# BLOCK_A_START=09:15
# BLOCK_A_END=09:16
# BLOCK_B_START=09:17
# BLOCK_B_END=09:18
# BLOCK_C_START=09:19
# BLOCK_C_END=09:20
# BLOCK_D_START=09:21
# BLOCK_D_END=09:22

# ========================================
# PROCESSING CONFIGURATION
# ========================================
MAX_SUMMARY_LENGTH=1000
ENABLE_DETAILED_QUOTES=true

# Daily Digest Configuration
ENABLE_DAILY_DIGEST=true
DAILY_DIGEST_TARGET_WORDS=4000

# Email Configuration
EMAIL_THEME=dark
ENABLE_STRUCTURED_OUTPUT=true
ENABLE_CONVERSATION_EVOLUTION=true
ENABLE_TOPIC_DEEP_DIVE=true

# Digest Creation Coordination (CRITICAL - Prevents duplicate emails)
# Options: task_manager (recommended), scheduler, or both
# task_manager: Creates digest when all blocks complete (faster, more reliable)
# scheduler: Creates digest at fixed time (7:30 PM)
# both: Both can create digests (not recommended - relies on locks)
DIGEST_CREATOR=task_manager

# Azure-specific settings
ENABLE_AZURE_MONITORING=false
AZURE_LOG_ANALYTICS_WORKSPACE_ID=your_workspace_id
AZURE_APPLICATION_INSIGHTS_KEY=your_insights_key

# ========================================
# SECURITY & COMPLIANCE
# ========================================
# Government monitoring requirements
ENABLE_AUDIT_LOGGING=true
RETENTION_DAYS=90
ENABLE_ENCRYPTION_AT_REST=true
