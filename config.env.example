# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Radio Stream Configuration  
RADIO_STREAM_URL=https://example.com/radio/stream
# Alternative: if using local audio input device
AUDIO_INPUT_DEVICE=default

# Timezone
TZ=America/Barbados

# File Storage
AUDIO_DIR=./audio
TRANSCRIPTS_DIR=./transcripts  
SUMMARIES_DIR=./summaries
WEB_DIR=./web_output

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Schedule (Barbados time - AST)
# Block A: 10:00-12:00 (120 min)
# Block B: 12:05-12:30 (25 min) 
# Block C: 12:40-13:30 (50 min)
# Block D: 13:35-14:00 (25 min)

BLOCK_A_START=10:00
BLOCK_A_END=12:00
BLOCK_B_START=12:05  
BLOCK_B_END=12:30
BLOCK_C_START=12:40
BLOCK_C_END=13:30
BLOCK_D_START=13:35
BLOCK_D_END=14:00

# Processing
MAX_SUMMARY_LENGTH=500
ENABLE_DETAILED_QUOTES=true

# Daily Digest Configuration
ENABLE_DAILY_DIGEST=true
DAILY_DIGEST_TARGET_WORDS=4000

# Digest Creation Coordination (Prevents duplicate emails)
# Options: task_manager (recommended), scheduler, or both
# task_manager: Creates digest when all blocks complete (faster, more reliable)
# scheduler: Creates digest at fixed time (7:30 PM)
# both: Both can create digests (not recommended - relies on locks)
DIGEST_CREATOR=task_manager
